{% style %}
  .ingredients-page {
    padding-left: 5rem;
    padding-right: 5rem;
  }

  .custom-slider-container {
    overflow: hidden;
    width: 80%;
    margin: 0 auto;
    position: relative;
  }

  .custom-slider-wrapper {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .custom-slider-slide {
    min-width: 100%;
    box-sizing: border-box;
    text-align: center;
  }

  .custom-slider-slide img {
    width: 50%;
    height: auto;
  }

  button.before,
  button.after {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 30px; /* Ancho del botón */
    height: 30px; /* Altura del botón */
    background-color: rgba(0, 0, 0, 0.5); /* Fondo semi-transparente */
    color: #fff; /* Color del ícono */
    font-size: 20px; /* Tamaño del ícono */
    text-align: center;
    line-height: 30px; /* Alinea verticalmente el ícono */
    cursor: pointer;
    z-index: 10;
  }

  button.before {
    left: 10px; /* Posición izquierda */
  }

  button.after {
    right: 10px; /* Posición derecha */
  }

  /* Estilo al pasar el mouse sobre los botones */
  button.before:hover,
  button.after:hover {
    background-color: rgb(0, 0, 255);
  }
{% endstyle %}

{% schema %}
{
  "name": "Ingredients List",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_section",
      "label": "Enable section",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select a collection Ingredient"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredients List"
    }
  ]
}
{% endschema %}
